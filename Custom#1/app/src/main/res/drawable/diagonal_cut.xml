<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="transparent"
    >
    <item
        >
        <shape>
            <solid android:color="#aa50f7"/>
        </shape>
    </item>
    <item>
        <bitmap android:src="@drawable/pback" android:gravity="center" android:alpha="0.3"/>
    </item>
    <item
        android:top="180dp"
        android:left="-10dp"
        android:bottom="-100dp"
        android:right="-50dp"
        >
        <rotate
            android:fromDegrees="-10"
            android:pivotX="10%"
            android:pivotY="60%"
            >
            <shape android:shape="rectangle">
                <solid android:color="#43037a" />
            </shape>
        </rotate>
    </item>

</layer-list>